<% unless items[:set].blank? -%>
<div class="ranking_box">
<h2><%= items[:display] %></h2>
<table class="tableout">
<tr>
<th>順位</th><th>名前</th><th>見た回数</th>
</tr>
<% items[:set][0, limit].each.with_index(1) do |ranking, index| -%>
<tr>
<td><%= index %></td>
<td class="contents"><%= link_to ranking[:link] do -%>
<span class="linkable">›</span><%= ranking[:name] -%><% if @author[:name] == ranking[:name] %><%= image_tag('layout/stars_on.png') %><% end %>
<% end -%></td>
<td class="number"><%= ranking[:number] %></td>
</tr>
<% end -%>
</table>
<% if limit < items[:set].size -%>
<%= link_to ranking_detail_path(items[:title], :return => request.fullpath) do -%>
<span class="linkable">›</span>ランキングをもっと見る...
<% end -%>
<% end -%>
</div>
<% end -%>

